<h1>Edit {{course.title}}</h1>

<form action="/courses/edit" method="post">
  <div class="input-field">
    <input name="title"  id="title" type="text" class="validate" required value="{{course.title}}">
    <label for="title">Course title</label>
    <span class="helper-text" data-error="Enter title" ></span>
  </div>
  <div class="input-field">
    <input name="price"  id="price" type="number" class="validate" required min="1" value="{{course.price}}">
    <label for="price">Price</label>
    <span class="helper-text" data-error="Enter price" data-success="right"></span>
  </div>
  <div class="input-field">
    <input name="url"  id="img" type="text" class="validate" required value="{{course.url}}">
    <label for="img">Image URL</label>
    <span class="helper-text" data-error="Enter image URL" ></span>
  </div>
  <input type="hidden" name="id" value="{{course.id}}">
  <button type="submit" class="btn btn-primary">Edit course</button>
</form>


