<h1>Courses</h1>

{{#if courses.length}}
  {{#each courses}}
  <div class="row">
    <div class="col s8 m6 l5 offset-s2 offset-m4 offset-l4">
      <div class="card hoverable">
        <div class="card-image">
          <img src='{{url}}' alt="{{title}}">
        </div>
        <div class="divider"></div>
        <div class="card-content">
          <span class="card-title">{{title}}</span>
          <p class="price"> {{price}}</p>
        </div>
        <div class="card-action flex">
          <a href="/courses/{{id}}" target="_blank">Open course</a>
          {{#if @root.isAuth}}
            <a href="/courses/{{id}}/edit?allow=true" >Edit course</a>
            <form action="/card/add" method="POST" >
              <input type="hidden" name="id" value="{{id}}">
              <button class="btn btn-primary" type="submit"> <i class="material-icons">shopping_basket </i></button>
            </form>
          {{/if}}

        </div>
      </div>
    </div>
  </div>


  {{/each}}
{{else}}
  <p>Empty </p>
{{/if}}
